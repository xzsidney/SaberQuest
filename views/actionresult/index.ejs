<%- include('../partials/header/header.ejs'); %>
<%- include('../partials/menu/menuPlayer'); %>

<div class="container mt-5">
  <div class="containerGame">
    <div class="game-ui bg-dark text-white p-4 rounded shadow"
      style="background-color: rgba(0, 0, 0, 0.85); border: 2px solid #009c3b; height: 800px; overflow-y: auto;">

      <h2 class="text-warning text-center mb-4">ðŸ§ª Resultados de AÃ§Ã£o</h2>

      <div class="text-end mb-3">
        <a href="/action-results/create" class="btn btn-success">+ Novo Resultado</a>
      </div>

      <% if (actionResults.length === 0) { %>
        <p class="text-center">Nenhum resultado cadastrado.</p>
      <% } else { %>
        <table class="table table-dark table-bordered table-hover">
          <thead>
            <tr class="table-success text-dark text-center">
              <th>#</th>
              <th>Nome</th>
              <th>Atributo</th>
              <th>Classe</th>
              <th>Dificuldade</th>
              <th>AÃ§Ãµes</th>
            </tr>
          </thead>
          <tbody>
            <% actionResults.forEach(result => { %>
              <tr>
                <td><%= result.id %></td>
                <td><%= result.name %></td>
                <td><%= result.attributeUsed %></td>
                <td><%= result.className %></td>
                <td><%= result.difficulty %></td>
                <td class="text-center">
                  <a href="/action-results/<%= result.id %>" class="btn btn-primary btn-sm">Ver</a>
                  <a href="/action-results/<%= result.id %>/edit" class="btn btn-warning btn-sm">Editar</a>
                  <form action="/action-results/<%= result.id %>/delete" method="POST" style="display:inline;" onsubmit="return confirm('Deseja excluir este resultado?');">
                    <button type="submit" class="btn btn-danger btn-sm">Excluir</button>
                  </form>
                </td>
              </tr>
            <% }); %>
          </tbody>
        </table>
      <% } %>

    </div>
  </div>
</div>

<%- include('../partials/footer/footer.ejs'); %>
