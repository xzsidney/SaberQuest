<%- include('../partials/header/header.ejs'); %>
<%- include('../partials/menu/menuPlayer'); %>

<div class="container mt-5">
  <div class="containerGame">
    <div class="game-ui bg-dark text-white p-4 rounded shadow" style="background-color: rgba(0, 0, 0, 0.85); border: 2px solid #009c3b;">

      <h2 class="text-warning text-center mb-4">Editar Aventura</h2>

      <form action="/adventures/<%= adventure.id %>/edit" method="POST">
        <div class="mb-3">
          <label for="name" class="form-label">Nome da Aventura</label>
          <input type="text" class="form-control" id="name" name="name" value="<%= adventure.name %>" required>
        </div>

        <div class="mb-3">
          <label for="description" class="form-label">Descrição</label>
          <textarea class="form-control" id="description" name="description" rows="3" required><%= adventure.description %></textarea>
        </div>

        <div class="mb-3">
          <label for="difficulty" class="form-label">Dificuldade</label>
          <select class="form-select" id="difficulty" name="difficulty" required>
            <option value="Fácil" <%= adventure.difficulty === 'Fácil' ? 'selected' : '' %>>Fácil</option>
            <option value="Média" <%= adventure.difficulty === 'Média' ? 'selected' : '' %>>Média</option>
            <option value="Difícil" <%= adventure.difficulty === 'Difícil' ? 'selected' : '' %>>Difícil</option>
          </select>
        </div>

        <div class="mb-3">
          <label for="reward" class="form-label">Recompensa</label>
          <input type="text" class="form-control" id="reward" name="reward" value="<%= adventure.reward %>" required>
        </div>

        <div class="mb-3">
          <label for="requirement" class="form-label">Pré-requisitos</label>
          <textarea class="form-control" id="requirement" name="requirement" rows="2"><%= adventure.requirement %></textarea>
        </div>

        <div class="mb-3">
          <label for="level" class="form-label">Nível Mínimo</label>
          <input type="number" class="form-control" id="level" name="level" value="<%= adventure.level %>" min="1" required>
        </div>

        <div class="text-center mt-4">
          <button type="submit" class="btn btn-success px-4">Atualizar</button>
          <a href="/adventures" class="btn btn-secondary ms-2">Cancelar</a>
        </div>
      </form>
      
    </div>
  </div>
</div>

<%- include('../partials/footer/footer.ejs'); %>
