<%- include('../partials/header/header.ejs'); %>
<%- include('../partials/menu/menuPlayer'); %>

<div class="container mt-5">
  <div class="containerGame">
    <div class="game-ui bg-dark text-white p-4 rounded shadow"
      style="background-color: rgba(0, 0, 0, 0.85); border: 2px solid #009c3b; max-width: 800px; margin: auto; height: 800px; overflow-y: auto;">

      <h2 class="text-warning text-center mb-4">Criar Ação de Aventura</h2>

      <form action="/adventure-actions/create" method="POST">
        <div class="mb-3">
          <label class="form-label">Nome da Ação</label>
          <input type="text" class="form-control" name="name" required>
        </div>

        <div class="mb-3">
          <label class="form-label">Descrição</label>
          <textarea class="form-control" name="description" rows="3" required></textarea>
        </div>

        <div class="mb-3">
          <label class="form-label">Dificuldade (1-10)</label>
          <input type="number" class="form-control" name="difficulty" min="1" max="10" required>
        </div>

        <div class="mb-3">
          <label class="form-label">Resultado precisa de Teste?</label>
          <select class="form-select" name="resultTest" required>
            <option value="true">Sim</option>
            <option value="false">Não</option>
          </select>
        </div>

        <div class="mb-3">
          <label class="form-label">Ação Física</label>
          <input type="number" class="form-control" name="physicalAction" min="0" max="10">
        </div>

        <div class="mb-3">
          <label class="form-label">Ação Social</label>
          <input type="number" class="form-control" name="socialAction" min="0" max="10">
        </div>

        <div class="mb-3">
          <label class="form-label">Ação Mental</label>
          <input type="number" class="form-control" name="mentalAction" min="0" max="10">
        </div>

        <div class="mb-3">
          <label class="form-label">Aventura Relacionada</label>
          <select class="form-select" name="adventureId" required>
            <% adventures.forEach(adventure => { %>
              <option value="<%= adventure.id %>"><%= adventure.name %></option>
            <% }) %>
          </select>
        </div>

        <div class="text-center">
          <button type="submit" class="btn btn-success">Salvar</button>
          <a href="/adventure-actions" class="btn btn-secondary ms-2">Cancelar</a>
        </div>
      </form>

    </div>
  </div>
</div>

<%- include('../partials/footer/footer.ejs'); %>
