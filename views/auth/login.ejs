<%- include('../partials/header/header.ejs'); %>
<%- include('../partials/menu/menuG.ejs'); %>
<div class="container mt-5">
  <div class="containerGame">
    <div class="game-ui">

  <h2 style="color:white; text-align:center;">Login</h2>
  <% if (error) { %>
    <p style="color:red; text-align:center;"><%= error %></p>
  <% } %>
  <form action="/login" method="POST" style="width:60%; margin:auto; color:white;">
    <div>
      <label>Usuario:</label>
      <input type="text" name="username" required class="form-control" />
    </div>
    <div>
      <label>Password:</label>
      <input type="password" name="password" required class="form-control" />
    </div>
    <div class="mt-3">
      <button type="submit" class="btn btn-success">Login</button>
    </div>
    <div class="mt-3 text-center">
  <a href="/" class="text-light me-3">
    <i class="bi bi-house-fill"></i> Voltar para Home
  </a>
  |
  <a href="/register" class="text-warning">
    <i class="bi bi-person-plus-fill"></i> Criar Conta
  </a>
</div>

  </form>
    </div>
  </div>
</div>
