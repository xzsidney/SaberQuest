<%- include('../partials/header/header.ejs'); %>
  <%- include('../partials/menu/menuPlayer'); %>

    <div class="container mt-5">
      <div class="containerGame">
        <div class="panel-ui">

          <div class="text-center mb-3">
            <div style="
    width: 100px;
    height: 100px;
    margin: auto;
    border: 3px solid #ffaa00;
    border-radius: 10px;
    background-image: url('/img/char/<%= character.id %>.jpg');
    background-size: cover;
    background-position: center;
    box-shadow: 0 0 8px #000;
  "></div>
          </div>

          <div class="panel-header">
            Nível <%= character.level %>
          </div>


          <!-- Atributos principais -->
          <div class="stat-line">
            <span>❤️ Vida</span>
            <span>
              <%= character.hp %>
            </span>
          </div>
          <div class="stat-line">
            <span>⚔️ Ataque</span>
            <span>
              <%= character.strength %>
            </span>
          </div>
          <div class="stat-line">
            <span>🛡️ Defesa</span>
            <span>
              <%= character.constitution %>
            </span>
          </div>
          <div class="stat-line">
            <span>💧 Mana</span>
            <span>
              <%= character.mana %>
            </span>
          </div>



          <div class="divider"></div>

          <!-- Atributos secundários -->
          <div class="stat-columns">
            <ul>
              <li>👁️ Percepção: <%= character.perception %>
              </li>
              <li>🧠 Cognição: <%= character.cognition %>
              </li>
              <li>💪 Vontade: <%= character.willpower %>
              </li>
            </ul>
            <ul>
              <li>💪 <strong>Força:</strong>
                <%= character.strength %>
              </li>
              <li>🏃 <strong>Destreza:</strong>
                <%= character.dexterity %>
              </li>
              <li>🛡️ <strong>Constituição:</strong>
                <%= character.constitution %>
              </li>
            </ul>
          </div>
          <div class="stat-columns">
            <ul>
              <li>📚 Série: <%= character.schoolGrade %>
              </li>

            </ul>
            <ul>
              <li>🎓 Classe: <%= character.className %>
              </li>

            </ul>
          </div>

          <div class="divider"></div>

          <ul>
            <li><strong>Nome:</strong>
              <%= character.name %>
            </li>
            <li><strong>Sexo:</strong>
              <%= character.gender %>
            </li>
            <li><strong>Idade:</strong>
              <%= character.age %>
            </li>
            <li>
              <strong>Habilidades:</strong>
              <ul style="margin-top: 8px;">
                <% (character.skills || '' ).split(',').forEach(skill=> { %>
                  <li style="color: #90ff90;">✅ <%= skill.trim() %>
                  </li>
                  <% }) %>
              </ul>
            </li>
            <li><strong>História:</strong>
              <%= character.biography %>
            </li>
          </ul>

          <div class="text-center mt-4">
            <a href="/characters/<%= character.id %>/edit" class="btn btn-warning me-2" style="font-weight: bold;">
              ✏️ Editar
            </a>

            <form action="/characters/<%= character.id %>/delete" method="POST" style="display:inline;"
              onsubmit="return confirm('Tem certeza que deseja excluir este personagem?');">
              <button type="submit" class="btn btn-danger" style="font-weight: bold;">
                🗑️ Excluir
              </button>
            </form>
          </div>

        </div>

      </div>
    </div>



    <%- include('../partials/footer/footer.ejs'); %>