<%- include('../../partials/header/header.ejs'); %>
 

<body class="fundo-container">
  <%- include('../../partials/menu/userMenu.ejs'); %>
  <div class="container text-center">
    <div class="row align-items-start">
      <div class="col-md-2">&nbsp;</div>
      <div class="col-md-8">

        <div class="container mt-5">
    <div class="card shadow-lg">
      <div class="card-header bg-primary text-white">
        <h4 class="mb-0">Criar Nova Aventura</h4>
      </div>
      <div class="card-body">
        <form action="/adventures" method="POST">
          
          <div class="row mb-3 align-items-center">
            <label class="col-sm-3 col-form-label" for="name">Nome da Aventura</label>
            <div class="col-sm-9">
              <input type="text" class="form-control" id="name" name="name" required>
            </div>
          </div>

          <div class="row mb-3 align-items-center">
            <label class="col-sm-3 col-form-label" for="description">Descrição</label>
            <div class="col-sm-9">
              <textarea class="form-control" id="description" name="description" rows="4" required></textarea>
            </div>
          </div>

          <div class="row mb-3 align-items-center">
            <label class="col-sm-3 col-form-label" for="difficulty">Dificuldade</label>
            <div class="col-sm-9">
              <select class="form-control" id="difficulty" name="difficulty" required>
                <option value="Fácil">Fácil</option>
                <option value="Média">Média</option>
                <option value="Difícil">Difícil</option>
              </select>
            </div>
          </div>

          <div class="row mb-3 align-items-center">
            <label class="col-sm-3 col-form-label" for="reward">Recompensa</label>
            <div class="col-sm-9">
              <input type="text" class="form-control" id="reward" name="reward" required>
            </div>
          </div>

          <div class="row mb-3 align-items-center">
            <label class="col-sm-3 col-form-label" for="requirement">Requisitos</label>
            <div class="col-sm-9">
              <textarea class="form-control" id="requirement" name="requirement" rows="3"></textarea>
            </div>
          </div>

          <div class="row mb-3 align-items-center">
            <label class="col-sm-3 col-form-label" for="level">Nível</label>
            <div class="col-sm-9">
              <input type="number" class="form-control" id="level" name="level" min="1" required>
            </div>
          </div>

          <div class="text-end">
            <button type="submit" class="btn btn-success">Criar Aventura</button>
            <a href="/adventures" class="btn btn-secondary ms-2">Cancelar</a>
          </div>

        </form>
      </div>
    </div>
  </div>
        
