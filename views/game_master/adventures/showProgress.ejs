<%- include('../../partials/header/header.ejs'); %>
 

<body class="fundo-container">
  <%- include('../../partials/menu/userMenu.ejs'); %>
  <div class="container text-center">
    <div class="row align-items-start">
      <div class="col-md-2">&nbsp;</div>
      <div class="col-md-8">
        
        <div class="container mt-5">
  <div class="card shadow-lg">
    <div class="card-header bg-info text-white">
      <h4 class="mb-0">Progresso da Aventura: <%= adventure.name %></h4>
    </div>
    <div class="card-body">
      <p><strong>Descrição:</strong> <%= adventure.description %></p>
      <p><strong>Dificuldade:</strong> <%= adventure.difficulty %></p>
      <p><strong>Status:</strong> <%= adventure.status || 'Não Iniciada' %></p>
      <p><strong>Status:</strong> <%= progress.status || 'Não Iniciada' %></p>
    <p><strong>Progresso:</strong></p>
<ul class="list-group mb-3 text-start">
  <% if (adventure.progress && adventure.progress.steps) { %>
    <% Object.entries(adventure.progress.steps).forEach(([key, value]) => { %>
      <li class="list-group-item"><strong><%= key %>:</strong> <%= value %></li>
    <% }) %>
  <% } else { %>
    <li class="list-group-item">Nenhum progresso definido.</li>
  <% } %>
</ul>
       
          
      <a href="/adventures/<%= adventure.id %>" class="btn btn-primary mt-3">Voltar</a>
    </div>
  </div>
</div>

        
      </div>
      <div class="col-md-2">&nbsp;</div>
    </div>
  </div>

  <%- include('../../partials/footer/footer.ejs'); %>
</body>
