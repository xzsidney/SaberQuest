<%- include('../../partials/header/header.ejs'); %>
 

<body class="fundo-container">
  <%- include('../../partials/menu/userMenu.ejs'); %>
  <div class="container text-center">
    <div class="row align-items-start">
      <div class="col-md-2">&nbsp;</div>
      <div class="col-md-8"> 
        
<div class="container mt-5">
  <div class="card shadow-lg">
    <div class="card-header bg-primary text-white">
      <h4 class="mb-0"><%= attribute.name %></h4>
    </div>
    <div class="card-body">
      <p><strong>Descrição:</strong> <%= attribute.description %></p>
     <p><strong>Níveis:</strong></p>
<ul class="list-group mb-3 text-start"> 
  <% if (attribute.levels) { %>
   <% Object.entries(attribute.levels.levels).forEach(([key, value]) => { %>
      <li class="list-group-item"><strong><%= key %>:</strong> <%= value %></li>
    <% }) %>
  <% } else { %>
    <li class="list-group-item">Nenhum nível definido.</li>
  <% } %>
</ul>
       

      <a href="/attributes/<%= attribute.id %>/edit" class="btn btn-warning">Editar</a>

      <form action="/attributes/<%= attribute.id %>/delete?_method=DELETE" method="POST" class="d-inline">
        <button type="submit" class="btn btn-danger">Excluir</button>
      </form>

      <a href="/attributes" class="btn btn-secondary">Voltar</a>
    </div>
  </div>
</div>
      </div>
      <div class="col-md-2">&nbsp;</div>
    </div>
  </div>

  <%- include('../../partials/footer/footer.ejs'); %>
</body>
