<%- include('../../partials/header/header.ejs'); %>
 

<body class="fundo-container">
  <%- include('../../partials/menu/userMenu.ejs'); %>
  <div class="container text-center">
    <div class="row align-items-start">
      <div class="col-md-2">&nbsp;</div>
      <div class="col-md-8">
        
        <div class="container mt-5">
  <div class="card shadow-lg">
    <div class="card-header bg-primary text-white">
      <h4 class="mb-0">Editar Ação da Aventura: <%= action.name %></h4>
    </div>
    <div class="card-body">
      <form action="/actions/<%= action.id %>?_method=PUT" method="POST">
        <input type="hidden" name="_method" value="PUT">

        <div class="form-group">
          <label for="name">Nome da Ação</label>
          <input type="text" class="form-control" id="name" name="name" value="<%= action.name %>" required>
        </div>
        <div class="form-group">
          <label for="description">Descrição</label>
          <textarea class="form-control" id="description" name="description" rows="3" required><%= action.description %></textarea>
        </div>
        <div class="form-group">
          <label for="difficulty">Dificuldade</label>
          <input type="text" class="form-control" id="difficulty" name="difficulty" value="<%= action.difficulty %>" required>
        </div>
        <div class="form-group">
          <label for="result">Resultado do Teste</label>
          <select class="form-control" id="result" name="result" required>
            <option value="true" <%= action.result === true ? 'selected' : '' %>>Verdadeiro</option>
            <option value="false" <%= action.result === false ? 'selected' : '' %>>Falso</option>
          </select>
        </div>
        <div class="form-group">
          <label for="physicalAction">Ação Física</label>
          <input type="number" class="form-control" id="physicalAction" name="physicalAction" value="<%= action.physicalAction %>" required>
        </div>
        <div class="form-group">
          <label for="socialAction">Ação Social</label>
          <input type="number" class="form-control" id="socialAction" name="socialAction" value="<%= action.socialAction %>" required>
        </div>
        <div class="form-group">
          <label for="mentalAction">Ação Mental</label>
          <input type="number" class="form-control" id="mentalAction" name="mentalAction" value="<%= action.mentalAction %>" required>
        </div>
        <button type="submit" class="btn btn-warning">Atualizar Ação</button>
      </form>
    </div>
  </div>
</div>

        
      </div>
      <div class="col-md-2">&nbsp;</div>
    </div>
  </div>

  <%- include('../../partials/footer/footer.ejs'); %>
</body>
