<%- include('../../partials/header/header.ejs'); %>
 

<body class="fundo-container">
  <%- include('../../partials/menu/userMenu.ejs'); %>
  <div class="container text-center">
    <div class="row align-items-start">
      <div class="col-md-2">&nbsp;</div>
      <div class="col-md-8"> 
        
        <div class="container mt-5">
  <div class="card shadow-lg">
    <div class="card-header bg-primary text-white">
      <h4 class="mb-0"><%= skill.name %></h4>
    </div>
    <div class="card-body">
      <p><strong>Descrição:</strong> <%= skill.description %></p>
      <p><strong>Tipo:</strong> <%= skill.type %></p>
      <p><strong>Nível:</strong> <%= skill.level %></p>
      <p><strong>Custo de Mana:</strong> <%= skill.manaCost %> (por nível)</p>
      <p><strong>Custo de Vida:</strong> <%= skill.healthCost %> (por nível)</p>
      <p><strong>Dano:</strong> <%= skill.damage %></p>
      <p><strong>Alcance:</strong> <%= skill.range %> metros</p>
      <p><strong>Arquétipo:</strong> <%= skill.archetypes %></p>

      <a href="/skills/<%= skill.id %>/edit" class="btn btn-warning">Editar</a>

      <form action="/skills/<%= skill.id %>/delete?_method=DELETE" method="POST" class="d-inline">
        <button type="submit" class="btn btn-danger">Excluir</button>
      </form>

      <a href="/skills" class="btn btn-secondary">Voltar</a>
    </div>
  </div>
</div>

        
      </div>
      <div class="col-md-2">&nbsp;</div>
    </div>
  </div>

  <%- include('../../partials/footer/footer.ejs'); %>
</body>
