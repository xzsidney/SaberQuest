<%- include('../partials/header/header.ejs'); %>
<%- include('../partials/menu/menuPlayer'); %>

<div class="container mt-5">
  <div class="containerGame">
    <div class="game-ui bg-dark text-white p-4 rounded shadow"
      style="background-color: rgba(0, 0, 0, 0.85); border: 2px solid #009c3b; max-width: 800px; margin: auto;">

      <h2 class="text-warning text-center mb-4">💬 Fala do NPC</h2>

      <div class="d-flex align-items-center mb-4">
        <img src="/img/npcs/<%= dialog.npcType.toLowerCase() %>.png"
             alt="NPC"
             class="me-3"
             style="width: 80px; height: 80px; border-radius: 50%; border: 2px solid #ffcc00; object-fit: cover;">
        <div>
          <h4><%= dialog.npcName %></h4>
          <p class="mb-0"><strong>Tipo:</strong> <%= dialog.npcType %></p>
          <p class="mb-0"><strong>Humor:</strong> <%= dialog.npcMood || 'Neutro' %></p>
        </div>
      </div>

      <div class="bg-light text-dark p-3 rounded">
        <p><i><%= dialog.dialogText %></i></p>
      </div>

      <div class="mt-4">
        <p><strong>Ligado ao Resultado de Ação:</strong>
          <%= dialog.ActionResult ? dialog.ActionResult.name : '---' %>
        </p>
      </div>

      <div class="text-center mt-4">
        <a href="/npc-dialogs/<%= dialog.id %>/edit" class="btn btn-warning">✏️ Editar</a>
        <form action="/npc-dialogs/<%= dialog.id %>/delete" method="POST" style="display:inline;" onsubmit="return confirm('Deseja excluir este diálogo?');">
          <button type="submit" class="btn btn-danger ms-2">🗑️ Excluir</button>
        </form>
      </div>

    </div>
  </div>
</div>

<%- include('../partials/footer/footer.ejs'); %>
